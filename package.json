{
  "name": "plan-my-escape-app",
  "description": "a Web-based editor for making online escape room games.",
  "version": "0.1",
  "engines": {
    "node": "22.x"
  },
  "private": true,
  "dependencies": {
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.20.2",
    "react": "^18.3.1",
    "react-dom": "18.3.1",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "esbuild app/javascript/src/entrypoints/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "lint": "eslint app/javascript/src/",
    "test": "jest app/javascript/tests",
    "cypress:compile": "RAILS_ENV=cypress bundle exec rails assets:precompile",
    "cypress:rails": "RAILS_ENV=cypress bundle exec rails db:prepare && kill -9 'puma' || bundle exec rails s -e cypress -p 5002",
    "cypress:local": "yarn cypress:compile && yarn cypress:rails",
    "cypress:headless": "yarn cypress run --e2e --browser chrome --config-file \"./cypress.config.ts\""
  },
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@eslint-react/eslint-plugin": "^1.5.11",
    "@eslint/js": "^9.2.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.5.12",
    "@types/react-test-renderer": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "babel-jest": "^29.7.0",
    "cypress": "^13.9.0",
    "cypress-esbuild-preprocessor": "sod/cypress-esbuild-preprocessor",
    "eslint": "^9.2.0",
    "eslint-plugin-cypress": "^3.2.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-internal": "^0.0.1-security",
    "eslint-plugin-security": "^3.0.0",
    "globals": "^15.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "local-cypress": "^1.2.6",
    "postinstall-postinstall": "^2.1.0",
    "react-test-renderer": "^18.3.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^7.8.0"
  }
}
